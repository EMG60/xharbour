      :Top                  := 223
      :Width                := 98
      :Height               := 30
      :Text                 := "Physical Order"
      :EventHandler[ "OnClick" ] := "ButtonNoOrd_OnClick"
      :Create()
   END //BUTTON

   WITH OBJECT ( GROUPBOX( Self ) )
      :Name                 := "GroupBox1"
