         :Text                 := "Name"
         :EventHandler[ "OnHeaderClick" ] := "GridColumn2_OnHeaderClick"
         :Create()
      END //GRIDCOLUMN

      WITH OBJECT ( GRIDCOLUMN( :this ) )
         :Name                 := "GridColumn3"
         :AllowSize            := .T.
         :AllowDrag            := .T.
         :Picture              := "9999999.999"
         :Data                 := "hb_QSelf():DataSource:Fields:PAYMENT"
         WITH OBJECT :Font
            :PointSize            := 11
         END

         :Alignment            := 2
         :Width                := 88
         :Text                 := "Payment"
         :Create()
      END //GRIDCOLUMN

      :Create()
   END //DATAGRID

   WITH OBJECT ( BUTTON( Self ) )
