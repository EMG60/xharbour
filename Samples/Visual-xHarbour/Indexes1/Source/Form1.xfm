      :Top                  := 28
      :Width                := 98
      :Height               := 138
      :Text                 := "Active Index"
      :Create()
      WITH OBJECT ( LABEL( :this ) )
         :Name                 := "Label1"
         :Left                 := 15
         :Top                  := 26
         :Width                := 72
         :Height               := 16
         :Text                 := "Tag Number:"
         :Create()
      END //LABEL

      WITH OBJECT ( LABEL( :this ) )
         :Name                 := "LabelNr"
