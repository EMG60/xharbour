      WITH OBJECT ( LABEL( :this ) )
         :Name                 := "Label2"
         :Left                 := 28
         :Top                  := 79
         :Width                := 80
         :Height               := 16
         :Caption              := "Timeline"
         :Create()
      END //LABEL

      WITH OBJECT ( LABEL( :this ) )
         :Name                 := "Label3"
         :Left                 := 28
         :Top                  := 134
         :Width                := 80
         :Height               := 16
         :Caption              := "Model"
         :Create()
      END //LABEL

      WITH OBJECT ( EDIT( :this ) )
